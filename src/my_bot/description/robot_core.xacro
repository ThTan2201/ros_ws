<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

   <xacro:include filename="/home/thanhtan/ros_ws/src/my_bot/description/inertial_macros.xacro"/>

     <!--Thiết lập vật liệu và màu sắc tổng thế cho robot-->
     <material name="white">
        <color rgba="1 1 1 1"/>
     </material>
     <material name="blue">
        <color rgba="0 0.255 0.255 1"/>
     </material>
     <material name="yellow">
        <color rgba="1 1 0 1"/>
     </material>
     <material name="black">
        <color rgba="0 0 0 1"/>
     </material>
     <material name="red">
      <color rgba="1 0 0 1"/>
   </material>

     <!---->
     <!-- Kích thước tổng quan thân robot (0.18 x 0.13 x 0.5)(d x r x c)  m  có nghĩa là sẽ không có sự di chuyển giữa các liên kết nối với khớp này -->
     <!-- Tạo liên kết cơ sở BASE_LINK -->
     <link name="base_link">

     </link>

     <!-- Chassis_link -->

     <!-- Khai báo khớp chassis_joint với kiểu là loaị khớp cứng -->
     <joint name="chassis_joint" type="fixed">
        <parent link="base_link" /> <!-- Khai báo base_link là khớp cha của chassis_joint -->
        <child link ="chassis" /> <!-- Khai báo rằng liên kết con của khớp chassis_joint là chassis -->
        <origin xyz="-0.06 0 0" />
     </joint>

     <link name="chassis">
        <visual> <!-- Thẻ mô tả hình dạng mà chúng ta sẽ thấy của khâu chassis -->
            <origin xyz="0.12 0 0.025" />
            <geometry> <!-- Hình học của khâu -->
                <box size="0.24 0.15 0.05"/>
            </geometry>
            <material name="yellow"/>
        </visual>
        <collision> <!-- Tạo va chạm -->
         <origin xyz="0.12 0 0.025" />
         <geometry> <!-- Hình học của khâu -->
             <box size="0.24 0.15 0.05"/>
         </geometry>
         <material name="yellow"/>
         </collision>
        <xacro:inertial_box mass="2" x="0.24" y="0.15" z="0.05">
         <origin xyz="0.12 0 0.025"/>
         </xacro:inertial_box>
     </link>

     <gazebo reference="chassis">
      <material>Gazebo/White</material>
     </gazebo>

     <!-- Bánh xe Trái (LEFT WHEEL LINK) tạo khớp động quay không giới hạn Continous -->
     <joint name="left_wheel_joint" type="continuous">
      <parent link="base_link"/>
      <child link="left_wheel"/>
      <origin xyz="0 0.09 0 " rpy="-${pi/2} 0 0"/>
      <axis xyz="0 0 1"/>
     </joint>

     <link name="left_wheel"> 
      <visual>
         <geometry>
            <cylinder radius="0.0325" length="0.03"/>
         </geometry>
         <material name="white"/>
      </visual>
      <collision>
         <geometry>
            <cylinder radius="0.0325" length="0.03"/>
         </geometry>
         <material name="white"/>
      </collision>
      <xacro:inertial_cylinder mass="0.05" length="0.03" radius="0.0325" >
        <origin xyz="0 0 0" rpy="0 0 0"/> 
      </xacro:inertial_cylinder>
      </link>

      <gazebo reference="left_wheel">
         <material>Gazebo/Blue</material>
        </gazebo>

     <!-- BÁNH XE PHẢI (RIGHT WHEEL LINK) -->
     <joint name="right_wheel_joint" type="continuous">
      <parent link="base_link"/>
      <child link="right_wheel"/>
      <origin xyz="0 -0.09 0 " rpy="${pi/2} 0 0"/>
      <axis xyz="0 0 -1"/>
     </joint>

     <link name="right_wheel"> 
      <visual>
         <geometry>
            <cylinder radius="0.0325" length="0.03"/>
         </geometry>
         <material name="white"/>
      </visual>
      <collision>
         <geometry>
            <cylinder radius="0.0325" length="0.03"/>
         </geometry>
         <material name="white"/>
      </collision>
      <xacro:inertial_cylinder mass="0.05" length="0.03" radius="0.0325" >
         <origin xyz="0 0 0" rpy="0 0 0"/> 
       </xacro:inertial_cylinder>
      </link>

      <gazebo reference="right_wheel">
         <material>Gazebo/Blue</material>
        </gazebo>

      <!-- Bánh đa (CASTER WHEEL LINK) -->
      <joint name="caster_wheel_link" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel"/> 
        <origin xyz="0.18 0 0"/>
      </joint>

      <link name="caster_wheel">
         <visual>
            <geometry>
               <sphere radius="0.03"/>
               <material name="black"/>
            </geometry>
         </visual>
         <collision>
            <geometry>
               <sphere radius="0.03"/>
               <material name="black"/>
            </geometry>
         </collision>
         <xacro:inertial_sphere mass="0.05" radius="0.03">
            <origin xyz="0 0 0" rpy="0 0 0"/>
         </xacro:inertial_sphere>
      </link>

      <gazebo reference="caster_wheel">
         <material>Gazebo/Black</material>
         <mu1 value="0.001"/>
         <mu2 value="0.001"/>
        </gazebo>
    
</robot>